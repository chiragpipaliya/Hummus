<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" 
   >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/main"
            >
            
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/txt3"
                android:paddingBottom="@dimen/txt3"
                android:text="Message"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:textSize="@dimen/txt6"
                />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_row_rate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/txt2"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical" 
        android:paddingLeft="@dimen/txt7"
        android:paddingRight="@dimen/txt7">
            
        <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
      	android:gravity="center"
        android:text="Review Send"
        android:textSize="@dimen/txt6"
        android:textColor="@color/black"
        android:layout_margin="@dimen/txt4"/>
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Successfully"
        android:textSize="@dimen/txt4"
        android:textColor="@color/black"
        android:layout_margin="@dimen/txt4"/>

	
            
        

        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <Button 
            android:id="@+id/b_rate_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:textSize="@dimen/txt7"
            android:background="@drawable/shape"
            android:layout_weight="1"
			android:textStyle="bold"
            android:layout_marginLeft="@dimen/txt7"
            android:layout_marginRight="@dimen/txt7"
            android:layout_marginBottom="@dimen/txt2"
            android:textColor="@color/yellow"
            />
        
         
    </LinearLayout>
</LinearLayout>
</LinearLayout>
