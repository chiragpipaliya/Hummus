<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header_main" >

        <TextView
            android:id="@+id/tv_maintitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Add Restaurant"
            android:textColor="@color/yellow"
            android:textSize="@dimen/txt6"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/backimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/txt"
                android:background="@drawable/ic_header_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:gravity="center"
                android:text="Back"
                android:textColor="@color/yellow"
                android:textSize="@dimen/txt7" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/list_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/txt2"
                    android:background="@drawable/textview" />
                <TextView
                    android:id="@+id/textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/list_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:maxLines="3"
                    android:text="Name of \n restaurant"
                    android:textSize="@dimen/txt5"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <!-- <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="wrap_content" > -->


            <!-- <RelativeLayout -->
            <!-- android:layout_width="fill_parent" -->
            <!-- android:layout_height="wrap_content" > -->


            <!-- <TextView -->
            <!-- android:id="@+id/num_txt" -->
            <!-- android:layout_width="100dp" -->
            <!-- android:layout_height="100dp" -->
            <!-- android:layout_marginTop="0dp" -->
            <!-- android:background="@drawable/textview" -->
            <!-- android:gravity="center" -->
            <!-- android:layout_centerInParent="true" -->
            <!-- android:text="My name is NON" -->
            <!-- android:textColor="#FFFFFF" -->
            <!-- android:textSize="10dp" /> -->


            <!-- </RelativeLayout> -->


            <!-- </RelativeLayout> -->

           
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/txt2"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/txt2"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:text="Name:"
                        android:textColor="@color/main"
                        android:textSize="@dimen/txt5" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:background="@drawable/et_border"
                        android:hint="Name of restaurant"
                        android:paddingBottom="@dimen/txt"
                        android:paddingLeft="@dimen/txt"
                        android:paddingTop="@dimen/txt"
                        android:textSize="@dimen/txt3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/txt2"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="Address:"
                        android:textColor="@color/main"
                        android:textSize="@dimen/txt5" />

                    <TextView
                        android:id="@+id/et_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:background="@drawable/et_border"
                        android:hint="Address of resturant"
                        android:padding="@dimen/txt"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/txt2"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="Telephone:"
                        android:textColor="@color/main"
                        android:textSize="@dimen/txt5" />

                    <EditText
                        android:id="@+id/et_telephone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:background="@drawable/et_border"
                        android:hint="telephone of restaurant"
                        android:padding="@dimen/txt"
                        android:phoneNumber="true"
                        android:textSize="@dimen/txt3" >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/txt2"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="Website:"
                        android:textColor="@color/main"
                        android:textSize="@dimen/txt5" />

                    <EditText
                        android:id="@+id/et_website"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:background="@drawable/et_border"
                        android:hint="Website of restaurant"
                        android:padding="@dimen/txt"
                        android:textSize="@dimen/txt3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/txt2"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.3"
                        android:text="Description:"
                        android:textColor="@color/main"
                        android:textSize="@dimen/txt5" />

                    <EditText
                        android:id="@+id/et_description"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.7"
                        android:background="@drawable/et_border"
                        android:gravity="top"
                        android:hint="Description of the restaurant"
                        android:inputType="textMultiLine"
                        android:lines="5"
                        android:padding="@dimen/txt"
                        android:textSize="@dimen/txt3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/txt2"
                    android:layout_marginTop="@dimen/txt2"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/b_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_submit"
                        android:drawableLeft="@drawable/ic_home_add_restaurant"
                        android:text="Submit"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/txt6" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>