<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bcolor"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header_main" >

        <TextView
            android:id="@+id/tv_maintitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/ll_share"
            android:layout_toRightOf="@+id/l1"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="List Detailskdmklmlsmdsdfuifduibfbdfbsdbj"
            android:textColor="@color/yellow"
            android:textSize="@dimen/txt6"                                                                                                                               
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/share_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/txt"
                android:background="@drawable/ic_event_details_header_share" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/backimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/txt"
                android:background="@drawable/ic_header_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:gravity="center"
                android:text="Back"
                android:textColor="@color/yellow"
                android:textSize="@dimen/txt7" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/list_scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/txt2"
                android:background="@color/white"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <com.github.siyamed.shapeimageview.CircularImageView
                        android:id="@+id/list_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/txt1"
                        android:layout_marginRight="@dimen/txt1"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_launcher" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/txt6"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp" >

                        <TextView
                            android:id="@+id/list_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5.0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt4" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/list_des1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="What you can find here:"
                    android:textColor="@color/main"
                    android:textSize="@dimen/txt4" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_map"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/txt2"
                android:background="@color/white"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.MapFragment"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/txt"
                        android:layout_marginRight="@dimen/txt"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/border" >
                    </fragment>
                </FrameLayout>

                <TextView
                    android:id="@+id/list_address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/txt"
                    android:layout_marginRight="@dimen/txt"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="5dp"
                    android:text="sfjiounfiurjfij"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt3" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_rate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/txt2"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/txt2"
                    android:layout_marginTop="@dimen/txt7"
                    android:text="RATING:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt3" />

                <RatingBar
                    android:id="@+id/rb_rating"
                    style="?android:attr/ratingBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/txt2"
                    android:progressDrawable="@drawable/cust_ratingbar"
                    android:scaleX="0.5"
                    android:isIndicator="true"
                    android:scaleY="0.5"
                    android:stepSize="1"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/txt2" >

                <HorizontalScrollView
                    android:id="@+id/horizontal_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <Button
                    android:id="@+id/photo_butoon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_home_genereal"
                    android:drawableLeft="@drawable/ic_event_details_add_photo"
                    android:paddingLeft="@dimen/txt2"
                    android:text="Add Photo"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/txt6"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/txt2"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="5dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/txt2"
                        android:paddingTop="5dp"
                        android:text="Add Review:"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt6" />

                    <TextView
                        android:id="@+id/tv_review"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/txt2"
                        android:paddingTop="5dp"
                        android:text="Show Review"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/main"
                        android:textSize="@dimen/txt6" />
                </LinearLayout>

                <EditText
                    android:id="@+id/re_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/txt2"
                    android:layout_marginRight="@dimen/txt2"
                    android:background="@drawable/border"
                    android:hint="Click here..."
                   android:imeOptions="actionDone"
                    android:lines="10"
                    android:singleLine="true"
                    android:paddingBottom="@dimen/txt7"
                    android:paddingLeft="@dimen/txt2"
                    android:paddingTop="@dimen/txt7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/txt1"
                android:layout_marginTop="@dimen/txt1"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/l_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="5dp"
                        android:src="@drawable/ic_event_details_call_us" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingBottom="5dp"
                        android:text="Phone number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_visit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="5dp"
                        android:src="@drawable/ic_event_details_visit_us" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingBottom="5dp"
                        android:text="Website"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_getd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="5dp"
                        android:src="@drawable/ic_event_details_get_direction" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingBottom="5dp"
                        android:text="Directions"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt2" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>